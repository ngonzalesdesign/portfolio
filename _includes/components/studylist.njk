<section class="studies scrollfeed">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="study-post scroll-post">
          <img src="{{post.data.gallery[0].image}}" alt="{{post.data.gallery[0].alt}}" />
          <h3 class="study-title">
			<a href="{{ post.url | url }}">
			  {% if post.data.title %}
			    {{ post.data.title }}
			  {% else %}
			    Untitled
			  {% endif %}
			</a>
	       </h3>
			
			<p>
					<small>{{ post.data.category}}</small>
			</p>
			
		</article>
	{% endfor %}
</section>