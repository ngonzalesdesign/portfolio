---
layout: layouts/blog.njk
section: post
---

<article class="blog-content">
  <h2 class="display h4">{{ title }}</h2>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </small>
  </p>

  {{ layoutContent | safe }}

  {% if tags %}
    <ul class="tags">
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <li><a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a></li>
      {%- endif -%}
    {% endfor %}
    </ul>
  {% endif %}

</article>

