<!doctype html>
	<html {% if permalink.includes('404')  %} class="invert" {% endif %} {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>


		<header>


			{% include "components/nav.njk" %}
				{% if permalink.includes('post')  %}
				<span class="cat-head">Blog</span>
				{% elif permalink.includes('projects') %}
				<span class="cat-head">Work</span>
				{% elif navtitle != 'Home' %}
				<h1 class="cat-head">{{title}}</h1>
				{% endif %}
		</header>

		<main>
			{{ layoutContent | safe }}
		</main>
	
		{% include "components/footer.njk" %}

	</body>

</html>
