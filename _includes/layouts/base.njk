<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header>
			<a href="{{ '/' | url }}">
				<img src="" alt="logo for natasha gonzales design"/>
				{% if navtitle == 'Home' %}
				<h1 class="site-title">Natasha Gonzales</h1>
				{% else %}
				<span class="site-title">Natasha Gonzales</h1>
				{% endif %}
			</a>

			{% include "components/nav.njk" %}
				{% if permalink.includes('post')  %}
				<span>Blog</span>
				<h1>{{title}}</h1>
				{% elif permalink.includes('projects') %}
				<span>Work</span>
				<h1>{{title}}</h1>
				{% elif navtitle != 'Home' %}
				<h1>{{title}}</h1>
				{% endif %}
		</header>

		<main>
			{{ layoutContent | safe }}
		</main>
	
		{% include "components/footer.njk" %}

	</body>

</html>
