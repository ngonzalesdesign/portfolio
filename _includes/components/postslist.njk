<section class="blog">
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %} class="blog-post">
			<h3 class="blog-title">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p class="blog-sum">
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p class="blog-date">
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}</small>
				</time>
			</p>
			{% if post.data.tags %}
				<ul class="tags blog-tags">
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<li><a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a></li>
		  			{%- endif -%}
					{% endfor %}
				</ul>
			{% endif %}
		</article>
	{% endfor %}
</section>
